<shortcuts> 
   <programGroup defaultName="MultiLeaf" location="applications"/> 
   <shortcut name="MultiLeaf ${project.version}" 
             target="$INSTALL_PATH/multileaf.exe" 
             description="MultiLeaf" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multileaf.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiLeaf ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiLeaf" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>